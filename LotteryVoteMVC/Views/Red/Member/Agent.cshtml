@model LotteryVoteMVC.Models.LoginModel
@using LotteryVoteMVC.Resources
@using LotteryVoteMVC.Resources.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@Resource.Agent</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Customer/comm.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Customer/ajaxHelper.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Customer/loginBase.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/red/comm.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/login2.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        var refreshVerifyCode = function () {
            $("img").attr("src", "Captcha?ticketer=" + new Date().getTime());
        }
        $(document).ready(function () {
            refreshVerifyCode();
        });
    </script>
</head>
<body>
    <center>
        <div>
            @using (Html.BeginForm())
            {
                <table>
                    <tr>
                        <td>
                            <label>
                            @Login.UserNameLabel
                            </label>
                        </td>
                        <td>
                            @Html.TextBoxFor(it => it.UserName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>
                            @Login.PasswordLabel
                            </label>
                        </td>
                        <td>
                            @Html.PasswordFor(it => it.Password)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>
                            @Login.LanguageLabel
                            </label>
                        </td>
                        <td>
                            @Html.Partial("Language")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>
                            @Login.VerifyCode
                            </label>
                        </td>
                        <td>
                            @Html.TextBoxFor(it => it.VerifyCode, new { @class = "verifyCode", maxlength = 5 })
                            <span class="vcode">
                                <img onclick="refreshVerifyCode()" />
                            </span>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td colspan="2">
                        <br />
                        <input type="submit" name="submit" class="shadow login" id="submit" value="@Login.LoginField" />
                        </td>
                    </tr>
                </table>
            }
        </div>
    </center>
    @Html.Partial("Agreement", LotteryVoteMVC.Models.Role.Agent)
    @Html.Partial("ChangePassword")
</body>
</html>
