@using LotteryVoteMVC.Core
@using LotteryVoteMVC.Core.Application
@using LotteryVoteMVC.Resources
@using LotteryVoteMVC.Utility
@{
    var controller = (LotteryVoteMVC.Controllers.BaseController)ViewContext.Controller;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cookie.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.18.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Customer/main.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Customer/comm.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Customer/resource_" + CultureHelper.GetCurrentCulture() + ".js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/Red/Comm.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Header", false)
</head>
<body>
    <div style="min-width: 990px; height: 100%">
        <div class="header">
            <div class="banner">
                <span id="logo">
                    <object type="application/x-shockwave-flash" data="@Url.Content("~/Content/Images/Logo.swf")" width="147"
                        height="67" id="flashPhoto2">
                        <param name="movie" value="@Url.Content("~/Content/Images/Logo.swf")">
                        <param name="allowFullScreen" value="true">
                        <param name="wmode" value="transparent">
                        <param name="menu" value="false">
                        <embed src="@Url.Content("~/Content/Images/Logo.swf")" wmode="transparent" quality="high" pluginspage="http://www.macromedia.com/go/getflashplayer"
                            type="application/x-shockwave-flash" width="147" height="67">
                    </object>
                </span>
                <div id="noticeBar">
                    <marquee onmouseover="this.stop()" onmouseout="this.start()"><h2>@BulletinManager.GetManager().GetTopBulletin()</h2></marquee>
                </div>
                <div class="InfoPanel">
                    <div id="userInfo">
                        <div>
                            <span>
                                @Resource.Welcome
                            </span><span><strong>
                                @LoginCenter.CurrentUser.UserName</strong></span>
                            @Html.Action("OnLine", "Partial")
                        </div>
                    </div>
                    <div class="language">
                        <a id="FlagCN" class="flag" lang="zh"></a><a id="FlagVN" class="flag" lang="vi">
                        </a><a id="FlagEN" class="flag" lang="en"></a>
                        <div class="langDesc">
                            <span>中文</span><span>Việt</span><span>English</span></div>
                    </div>
                    @{ var list = LotteryVoteMVC.Helpers.ThemeHelper.GetSelectedList(ViewContext.RequestContext.HttpContext.Items["themeName"].ToString());
                    }
                    @Html.DropDownList("Theme", list)
                    <script language="javascript" type="text/javascript">
                        $(function () {
                            $('#Theme').change(function () {
                                $.post('@Url.Action("Index", "ThemeDropdown")', { theme: $(this).val() }, function (result) {
                                    location.reload();
                                });
                            });
                        });
                    </script>
                </div>
            </div>
            @Html.Partial("~/Views/Red/Partial/NavMenu.cshtml", controller.CurrentUser)
        </div>
        <div class="main">
            @RenderBody()
        </div>
        <div class="footer">
            <p id="copyright">
                Copyright © 2008-2012 <a href="http://www.vn9988.com">6d9vn</a>
            </p>
        </div>
    </div>
    @Html.Hidden("ServerDate", DateTime.Today.ToString("yyyy-MM-dd"))
</body>
</html>
