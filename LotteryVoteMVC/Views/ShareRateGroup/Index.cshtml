@using LotteryVoteMVC.Models
@using LotteryVoteMVC.Resources
@model IEnumerable<ShareRateGroup>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Main.cshtml";
}
@section Header
{
    <script src="@Url.Content("~/Scripts/Customer/TableBase.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/TableBase.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/inputs.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Pager/pagerGray.css")" rel="stylesheet" type="text/css" />
}
<div id="searchBar">
    @using (Html.BeginForm("AddGroup", "ShareRateGroup", FormMethod.Post))
    {
        <span>分组名称</span>
        @Html.TextBox("Name")
        <span>@Resource.ShareRate</span>
        @Html.TextBox("ShareRate")
        <input type="submit" name="search" id="search" value="@Resource.Add" />
    }
</div>
@{int index = 1;}
<table cellpadding="0" cellspacing="0">
    <thead>
        <tr>
            <td>
                @Resource.No
            </td>
            <td>
                分组名称
            </td>
            <td>
                分成
            </td>
            <td>
                @Resource.Time
            </td>
            <td>
                @Resource.Function
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        { 
            <tr>
                <td>@(index++)
                </td>
                <td>@group.Name
                </td>
                <td>@group.ShareRate
                </td>
                <td>@group.CreateTime
                </td>
                <td>
                <a href="javascript:editGroupLimit(@group.Id)">@Resource.Limit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
