@using LotteryVoteMVC.Resources
@{
    Layout = "~/Views/Shared/Main.cshtml";
}
@section Header
{
    <script src="@Url.Content("~/Scripts/jquery.base64.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Customer/BetComm.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/BetBase.css")" rel="stylesheet" type="text/css" />
}
@RenderSection("Head", false)
<div class="betBar">
    <table cellpadding="0" cellspacing="0">
        <tr>
            <td>
                @Html.Action("AmountBoard")
            </td>
            <td>
                @Html.Partial("OpenCompany")
            </td>
            <td>
                <div id="command">
                    @using (Html.BeginForm())
                    {
                        <input type="submit" class="bigSubmit shadow" name="submit" id="submit" value="@Resource.Submit" />
                        <input type="reset" class="bigReset shadow" name="reset" id="reset" value="@Resource.Reset" />
                    }
                </div>
            </td>
        </tr>
    </table>
</div>
@RenderBody()
