@using LotteryVoteMVC.Resources
@using LotteryVoteMVC.Utility
@model PagedList<LotteryVoteMVC.Models.LoginFailedLog>
@{
    ViewBag.Title = Resource.LoginFailed;
    Layout = "~/Views/Default/Shared/Main.cshtml";
}
@section Header
{
    <link href="@Url.Content("~/Content/TableBase.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/Red/BetSheet.css")" rel="stylesheet" type="text/css" />
}
@{int index = 1;}
<table cellpadding="0" cellspacing="0" class="tablestyleAdmin">
    <thead>
        <tr class="headerstyleAdmin">
            <th>
                @Resource.No
            </th>
            <th>
                @Resource.IPAddress
            </th>
            <th>
                @Resource.Time
            </th>
        </tr>
    </thead>
    @foreach (var log in Model)
    { 
        <tr class="@(index % 2 == 0 ? "rowstyleAdmin" : "altrowstyleAdmin")">
            <td>@(index++)
            </td>
            <td>@log.IP
            </td>
            <td>@log.CreateDate
            </td>
        </tr>
    }
    <tr class="pagerstyleAdmin">
        <td colspan="3">
            @Html.Pager(Model)
        </td>
    </tr>
</table>
